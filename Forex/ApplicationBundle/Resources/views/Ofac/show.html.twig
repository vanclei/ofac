{% extends "layout.html.twig" %}

{% block title %}Ofac - {{ parent() }}{% endblock %}

{% block body %}


    <table class="table table-hover record_properties">
        <tbody>
        <tr>
            <th scope="row">Id</th>
            <td>{{ ofac.id }}</td>
        </tr>
        <tr>
            <th scope="row">Firstname</th>
            <td>{{ ofac.firstname }}</td>
        </tr>
        <tr>
            <th scope="row">Lastname</th>
            <td>{{ ofac.lastname }}</td>
        </tr>
        <tr>
            <th scope="row">Type</th>
            <td>{{ ofac.type }}</td>
        </tr>
        <tr>
            <th scope="row">Details</th>
            <td>{{ ofac.details }}</td>
        </tr>
        <tr>
            <th scope="row">Created</th>
            <td>{{ ofac.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th scope="row">Updated</th>
            <td>{{ ofac.updated|date('Y-m-d H:i:s') }}</td>
        </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
    {{ form_widget(delete_form) }}

    <div class="btn-group record_actions">

        <a class="btn btn-info" href="{{ path('ofac') }}">
            <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
        </a>

        <a class="btn btn-primary" href="{{ path('ofac_edit', {id: ofac.id}) }}">
            <i class="fa fa-edit"></i> {{ 'Edit'|trans({}, 'admin') }}
        </a>


    </div>

    <input name="modal" type="hidden" value="0">
    {{ form_end(delete_form) }}

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'admin') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'admin') }}
                        , {{ 'this procedure is irreversible'|trans({}, 'admin') }}.</p>

                    <p>{{ 'Do you want to proceed?'|trans({}, 'admin') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'admin') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'admin') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
